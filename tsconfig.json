{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "es2017"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": true,
		"target": "esnext",
		"incremental": true
	},
	"exclude": ["node_modules", "functions"],
	"include": ["**/*.ts", "**/*.tsx", "pages/_app.js", "next.config.js", "src/components/sw.js"]
}
